<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.mcmaster.plan6.erudite.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/quizzes_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Quizzes"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="223dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/grades_button"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/upload_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_alignStart="@+id/quizzes_button"
            android:layout_below="@+id/quizzes_button"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Upload"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="223dp"/>

        <Button
            android:id="@+id/grades_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Grades"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/content_button"
            android:layout_alignStart="@+id/quizzes_button"/>

        <Button
            android:id="@+id/content_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Content"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="159dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/grades_button"/>
</RelativeLayout>

